<h1>Create New Meetup</h1>
<% if @error %>
  <%= @error %>
<% end %>
<form action="/meetups/new" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" placeholder="Meetup Name" value="<%= @name %>">

  <label for="location">Location:</label>
  <input type="text" id="location" name="location" placeholder="Meetup Location" value="<%= @location %>">

  <label for="description">Description:</label>
  <input type="text" id="description" name="description" placeholder="Meetup Description" value="<%= @description %>">


  <input type="submit" name="Submit" value="Submit">
</form>
